	<bean type="controller" name="/customer/login" class="com.euishoe.customers.controller.CustomerLoginController" />
	<bean type="controller" name="/customer/regist" class="com.euishoe.customers.controller.CustomerRegistController" />
	<bean type="controller" name="/customer/logout" class="com.euishoe.customers.controller.CustomerLogoutController" />
